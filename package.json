{
  "description": "Unified testing framework",
  "author": "QlikTech International AB",
  "private": true,
  "license": "MIT",
  "scripts": {
    "test": "yarn test:node && yarn test:chrome && yarn test:protractor && yarn test:puppeteer",
    "test:node": "aw -c aw.config.js",
    "test:chrome": "aw chrome -c aw.config.js",
    "test:protractor": "aw protractor -c aw.config.js --directConnect",
    "test:puppeteer": "aw puppeteer -c aw.config.js",
    "test:coveralls": "aw -c aw.config.js --coverage && cat coverage/lcov.info | coveralls",
    "lint": "lerna run lint"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:qlik-oss/after-work.js.git"
  },
  "devDependencies": {
    "@after-work.js/cli": "5.1.1",
    "@after-work.js/cdp": "5.1.1",
    "@after-work.js/node": "5.1.1",
    "@after-work.js/puppeteer": "5.1.1",
    "@after-work.js/protractor": "5.1.1",
    "@after-work.js/serve": "5.1.1",
    "@babel/core": "7.1.6",
    "@babel/plugin-transform-react-jsx": "7.1.6",
    "@babel/preset-env": "7.1.6",
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.5",
    "babel-plugin-istanbul": "5.1.0",
    "coveralls": "3.0.2",
    "eslint": "5.9.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.11.1",
    "globby": "8.0.1",
    "lerna": "3.4.3",
    "protractor": "5.4.1",
    "requirejs": "2.3.6",
    "typescript": "3.1.6",
    "yargs": "12.0.5"
  },
  "workspaces": [
    "commands/*",
    "examples/*",
    "packages/*",
    "plugins/*"
  ]
}
